<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mathe.matchandplay.MostraUsuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >




            <TextView
                android:id="@+id/txtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nome Usuário"
                android:textSize="30sp" />


            <ImageView
                android:id="@+id/imgUsuario"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_menu_camera" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Email Usuário"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtMeusJogos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meus Jogos"
                android:textSize="20sp"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >


            </ListView>

            <TextView
                android:id="@+id/txtJogosDesejados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jogos Desejados"
                android:textSize="20sp"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >


            </ListView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
